@model CreateHomeViewModel

    <!-- Page Header -->
    <header class="masthead" style="background-image: url('/img/post-sample-image.jpg')">
        <div class="overlay"></div>
        <div class="container">
            <div class="row">
                <div class="col-lg-8 col-md-10 mx-auto">
                    <div class="page-heading">
                        <h1>Post Details</h1>
                        <span class="subheading">Blog Post Details</span>
                    </div>
                </div>
            </div>
        </div>
    </header>

    <div class="container">
        <div class="row">
            <h2 class="page-heading">BLOG DETAILS</h2>
        </div>

        <div class="block">
            <div class="row">
                <div class="span4">
                    <img class="img-left" src=@Model.ImageUrl height=500/>
                    <div class="content-heading"><h3>@Model.Title &nbsp </h3></div>
                    <p class="post-meta">Date Created => @Model.DateCreated, Date Updated => @Model.DateUpdated</p>
                    <p>@Model.Body</p>
                </div>
            </div>
            <br />
        </div>

    </div>