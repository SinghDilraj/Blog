@model CommentHomeViewModel
<!-- Search form -->
<form method="post">
    <div class="form-group">
        @Html.LabelFor(p => p.data, "Comment Here")
        @Html.TextBoxFor(p => p.data, new { @class = "form-control", placeholder = "Comment" })
        @Html.ValidationMessageFor(p => p.data)
    </div>
    <div class="form-group">
        <button type="submit" class="btn btn-primary">Search</button>
    </div>
</form>
