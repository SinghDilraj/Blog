@model IndexHomeViewModel
<!-- Search form -->
<form method="post">
    <div class="form-group">
        @Html.LabelFor(p => p.Query, "Search Posts")
        @Html.TextBoxFor(p => p.Query, new { @class = "form-control", placeholder = "Search" })
        @Html.ValidationMessageFor(p => p.Query)
    </div>
    <div class="form-group">
        <button type="submit" class="btn btn-primary">Search</button>
    </div>
</form>